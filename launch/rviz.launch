<?xml version="1.0"?>
<launch>

    <rosparam file="$(find hex)/config/monoped_new.yaml"
            command="load"/>

    <!-- Robot Description -->
    <arg name="model" default="hexapod_new"/>
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find hex)/models/$(arg model)/xacro/hexapod.urdf.xacro'" />

    <!-- Spawn Model -->
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" output="screen"
            args="-urdf -model $(arg model) -param robot_description"/>

    <!-- Robot State Publisher -->
    <node name="robot_state_publisher_hexapod" pkg="robot_state_publisher" type="robot_state_publisher"
            respawn="false" output="screen">
                <param name="publish_frequency" type="double" value="30.0" />
                <param name="ignore_timestamp" type="bool" value="true" />
                <param name="tf_prefix" type="string" value="hexapod" />
                <remap from="/joint_states" to="/hexapod/joint_states" />
    </node>

    <!-- Joint State Publisher Gui -->
    <node name="joint_state_publisher_gui_hexapod" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"
            respawn="false" output="screen">
                <param name="use_gui" type="bool" value="true" />
                <param name="publish_frequency" type="double" value="30.0" />
                <param name="ignore_timestamp" type="bool" value="true" />
                <param name="tf_prefix" type="string" value="hexapod" />
                <remap from="/joint_states" to="/hexapod/joint_states" />
    </node>

    <!-- Rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find hex)/config/hexapod.rviz" />
</launch>